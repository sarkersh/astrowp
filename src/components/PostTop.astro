---
// Import Tailwind CSS
import 'tailwindcss/tailwind.css'
const title = Astro.props.title || 'Content'
const contentType = Astro.props.contentType
import {Icon} from "astro-icon/components";
---

<div class="container1 flex justify-between mx-auto1 pl-0 pr-0">
    <!-- Search and Action Section -->
    <div class="flex flex-col md:flex-row items-center justify-between w-full mb-4 pr-4">

        <div class="flex">
            <!-- Search Bar -->
            <div class="flex flex-grow mb-2 md:mb-0 md:flex-grow-0 items-center border rounded overflow-hidden">
                <input type="search" placeholder={"Find " + title} class="px-4 py-2 w-full" />

                <button class="bg-gray-2001 px-4 hover:bg-gray-3001">
                    <Icon name="mdi:search" class="w-6 h-6 bg-gray-200 "/>
                    <!-- SVG for search icon -->
                </button>
            </div>

            <!-- Module and Sort Dropdowns -->
            <div class="flex flex-grow justify-between md:flex-grow-0 md:justify-start">
                <div class="relative">
                    <select class="border rounded px-4 py-2 w-full md:w-auto">
                        <option>Sort by:</option>
                        <option>Title</option>
                        <option>Author</option>
                        <option>Status</option>
                        <option>Date</option>
                        <!-- Sorting options -->
                    </select>
                </div>
            </div>
        </div>

        <a href={"/" + contentType + "/new"}>
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded w-full md:w-auto">
                New {title}
        </button>
        </a>
    </div>


</div>
